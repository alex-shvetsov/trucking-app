<Window x:Class="trucking_app.z_info_employee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:trucking_app"
        mc:Ignorable="d"
        Title="Информация о сотруднике" Height="350" Width="400"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".4*"/>
            <ColumnDefinition Width=".6*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="10"
                   VerticalAlignment="Center">Паспорт:</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="10"
                   VerticalAlignment="Center">ФИО:</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="0" Margin="10"
                   VerticalAlignment="Center">Пол:</TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="0" Margin="10"
                   VerticalAlignment="Center">Возраст:</TextBlock>
        <TextBlock Grid.Row="4" Grid.Column="0" Margin="10"
                   VerticalAlignment="Center">Телефон:</TextBlock>
        <TextBlock Grid.Row="5" Grid.Column="0" Margin="10"
                   VerticalAlignment="Center">Должность:</TextBlock>
        <TextBlock Grid.Row="6" Grid.Column="0" Margin="10"
                   VerticalAlignment="Center">Филиал:</TextBlock>

        <TextBlock Grid.Row="0" Grid.Column="1" Margin="10" x:Name="passportTB"
                   VerticalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="2" Margin="10" x:Name="nameTB"
                   VerticalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="3" Margin="10" x:Name="sexTB"
                   VerticalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="4" Margin="10" x:Name="ageTB"
                   VerticalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="4" Grid.Column="2" Margin="10" x:Name="phoneTB"
                   VerticalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="5" Grid.Column="3" Margin="10" x:Name="positionTB"
                   VerticalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="6" Grid.Column="4" Margin="10" x:Name="branchTB"
                   VerticalAlignment="Center"></TextBlock>
    </Grid>
</Window>
